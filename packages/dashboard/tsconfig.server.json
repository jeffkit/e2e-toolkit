{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": "server",
    "declaration": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
